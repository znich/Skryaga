<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppDefault" parent="AppTheme">
        <item name="colorPrimary">@color/abisso</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:background">@color/tera</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="mainInfo" parent="AppTheme">
        <item name="android:layout_height">190dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/acqua</item>
    </style>

    <style name="mainInfoText" parent="AppTheme">
        <item name="android:textColor">@color/teraLight</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <!--<item name="android:alpha">0.87</item>-->
    </style>

    <style name="mainInfoTextLabel" parent="mainInfoText">
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:colorPressedHighlight">#f3f3f3</item>
    </style>

</resources>
