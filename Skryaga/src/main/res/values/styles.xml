<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppDefault" parent="AppTheme">
        <item name="colorPrimary">@color/abisso</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:windowBackground">@color/abisso</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:background">@color/tera</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="mainInfo" parent="AppTheme">
        <item name="android:layout_height">130dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/main_info_background</item>
    </style>

    <style name="mainInfoText" parent="AppTheme">
        <item name="android:textColor">@color/teraLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="mainInfoTextLabel" parent="mainInfoText">
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="mainInfoRightText" parent="mainInfoTextLabel">
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:colorPressedHighlight">#f3f3f3</item>
    </style>

    <!-- TRANSACTIONS -->
    <style name="transactionsList">
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="transactionItem">
        <item name="android:background">@color/acquaProfonda</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="transactionText">
        <item name="android:textColor">@color/teraLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="transactionItemDate" parent="transactionText">
        <item name="android:width">150dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="transactionGroupDate" parent="transactionText">
        <item name="android:background">@drawable/date_item_background</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="transactionAmount" parent="transactionText">
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="transactionMessage" parent="transactionText">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="transactionIcon" parent="transactionText">
        <item name="android:layout_marginTop">-2dp</item>
    </style>

    <style name="transactionGoalIcon" parent="transactionText">
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Goal dialog-->
    <style name="goalDialog">
        <item name="android:paddingLeft">23dp</item>
    </style>

    <style name="dialogLabel">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
